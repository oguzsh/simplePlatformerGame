{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 80
      }
    ],
    "indent": ["error", 2],
    "comma-dangle": ["error", "never"],
    "object-shorthand": "off",
    "no-use-before-define": "off",
    "linebreak-style": 0
  }
}